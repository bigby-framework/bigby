{
  "name": "bigby-repo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "eslint 'packages/bigby-core/src/**/*.ts'",
    "test": "lerna run --stream test",
