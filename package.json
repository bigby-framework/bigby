{
  "name": "bigby-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "version": "0.0.1",
  "repository": "bigby-framework/bigby.git",
  "homepage": "https://bigby.dev",
  "author": "Hendrik Mans <hendrik@mans.de>",
  "license": "MIT",
  "scripts": {
    "dev": "yarn bootstrap && yarn run watch:all",
    "ci": "yarn bootstrap && yarn clean:all && yarn build:all && yarn test:all",
    "bootstrap": "yarn lerna bootstrap",
    "release": "yarn publish:all",
    "clean:all": "lerna run --parallel clean",
    "watch:all": "lerna run --parallel watch",
    "build:all": "lerna run --stream build",
    "test:all": "jest",
    "publish:all": "lerna publish",
    "docs:all": "lerna run docs"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "canvas": "^2.6.1",
    "jest": "^25.3.0",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "lerna": "^3.20.2",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  }
}
