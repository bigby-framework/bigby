{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./src/",
    "outDir": "./esm/",
    "preserveWatchOutput": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
