{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist/",
    "strict": false /* SOON */,
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "./src/",
    "paths": {
      "~/*": ["*"]
    }
  },
  "typedocOptions": {
    "mode": "library",
    "out": "docs"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
